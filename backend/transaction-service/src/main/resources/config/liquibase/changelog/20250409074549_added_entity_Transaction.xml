        <dropDefaultValue tableName="transaction" columnName="payment_expired" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="transaction" columnName="paided_at" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="transaction" columnName="created_at" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="transaction" columnName="updated_at" columnDataType="${datetimeType}"/>
    </changeSet>

