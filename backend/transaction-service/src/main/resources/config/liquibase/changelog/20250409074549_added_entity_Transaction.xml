            <column name="total_payment" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="total_payment_usd" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="payment_number" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="payment_qr" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="payment_link" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="payment_status" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="payment_expired" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="payment_reference_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="paided_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="created_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="created_by" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="updated_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="updated_by" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
