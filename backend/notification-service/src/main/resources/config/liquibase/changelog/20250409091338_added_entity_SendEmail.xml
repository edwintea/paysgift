            </column>
            <column name="updated_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="updated_by" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="send_email" columnName="date_time_entry" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="send_email" columnName="date_time_send" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="send_email" columnName="created_at" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="send_email" columnName="updated_at" columnDataType="${datetimeType}"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

