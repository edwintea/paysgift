            </column>
            <column name="date_time_send" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="mail_from" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="mail_from_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="status" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="info" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="mail_cc" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="mail_cc_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="table_relation" type="varchar(255)">
                <constraints nullable="true" />
