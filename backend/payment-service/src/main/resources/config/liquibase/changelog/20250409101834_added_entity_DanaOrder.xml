            </column>
            <column name="product_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="issuance_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="voucher_code" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="voucher_pin" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="issuance_date" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="expired_date" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="extend_info" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="send_email_notif" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="created_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="created_by" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="updated_at" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="updated_by" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="dana_order" columnName="req_time" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="dana_order" columnName="resp_time" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="dana_order" columnName="issuance_date" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="dana_order" columnName="expired_date" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="dana_order" columnName="send_email_notif" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="dana_order" columnName="created_at" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="dana_order" columnName="updated_at" columnDataType="${datetimeType}"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

