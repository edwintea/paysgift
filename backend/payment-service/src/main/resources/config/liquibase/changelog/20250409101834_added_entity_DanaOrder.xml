            <column name="function_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="req_time" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="resp_time" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="is_active" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="req_msg_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="request_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="order_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="code" type="varchar(255)">
