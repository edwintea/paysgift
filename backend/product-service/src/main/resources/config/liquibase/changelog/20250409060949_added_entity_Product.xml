            <column name="description_en" type="string"/>
            <column name="tnc" type="string"/>
            <column name="tnc_en" type="string"/>
            <column name="how_to_claim" type="string"/>
            <column name="how_to_claim_en" type="string"/>
            <column name="denom" type="numeric"/>
            <column name="buying_price" type="numeric"/>
            <column name="price" type="numeric"/>
            <column name="is_unlimited" type="boolean"/>
            <column name="qty" type="numeric"/>
            <column name="purchase_qty" type="numeric"/>
            <column name="remaining_qty" type="numeric"/>
            <column name="validity_purchase" type="numeric"/>
            <column name="validity_start_date" type="date"/>
            <column name="validity_end_date" type="date"/>
            <column name="tag" type="string"/>
            <column name="is_delivery" type="boolean"/>
            <column name="is_active" type="boolean"/>
            <column name="is_delete" type="boolean"/>
            <column name="permalink" type="string"/>
            <column name="updated_sync" type="string"/>
            <column name="created_at" type="date"/>
            <column name="created_by" type="numeric"/>
            <column name="updated_at" type="date"/>
            <column name="updated_by" type="numeric"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here -->
        </loadData>
    </changeSet>
</databaseChangeLog>
